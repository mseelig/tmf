<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>Restaurant phone</th>
    <th>Restaurant name</th>
    <th>Time zone</th>
    <th>Username</th>
    <th>Password</th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%=h restaurant.restaurant_phone %></td>
    <td><%=h restaurant.restaurant_name %></td>
    <td><%=h restaurant.time_zone %></td>
    <td><%=h restaurant.username %></td>
    <td><%=h restaurant.password %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New restaurant', new_restaurant_path %>